<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:music/musicPlayer.properties"/>

        <bean id="rapMusic" class="ru.alishev.springcourse.lesson_4_5_6_7.RapMusic"></bean>
        <bean id="classicalMusic" class="ru.alishev.springcourse.lesson_4_5_6_7.ClassicalMusic"></bean>
        <bean id="rockMusic" class="ru.alishev.springcourse.lesson_4_5_6_7.RockMusic"></bean>
        <bean id="musicPlayer"
              class="ru.alishev.springcourse.lesson_4_5_6_7.MusicPlayer"
                scope="prototype">
            <property name="musicList" >
                <list>
                    <ref bean="classicalMusic"></ref>
                    <ref bean="rapMusic"></ref>
                    <ref bean="rockMusic"></ref>
                </list>
            </property>
        </bean>

